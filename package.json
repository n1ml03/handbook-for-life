{
  "name": "handbook-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Handbook",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:debug": "concurrently \"bun run dev:backend:debug\" \"bun run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:verbose": "concurrently \"bun run dev:backend:verbose\" \"bun run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "setup": "cd backend && bun run setup",
    "local-setup": "cd backend && bun run local-setup",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:backend:debug": "cd backend && bun run dev:debug",
    "dev:backend:verbose": "cd backend && bun run dev:verbose",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "build:all": "bun run build:backend && bun run build:frontend",
    "install:frontend": "cd frontend && bun install",
    "install:backend": "cd backend && bun install",
    "install:all": "bun run install:backend && bun run install:frontend",
    "clean:frontend": "cd frontend && bun run clean",
    "clean:backend": "cd backend && bun run clean",
    "clean:all": "bun run clean:frontend && bun run clean:backend && rm -rf node_modules",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && bun run lint",
    "lint:all": "bun run lint:frontend && bun run lint:backend",
    "network-setup": "bun run scripts/network-cli.js setup",
    "network-setup:validate": "bun run scripts/network-cli.js setup --validate",
    "network-setup:force": "bun run scripts/network-cli.js setup --force",
    "network-discover": "bun run scripts/network-cli.js discover",
    "network-discover:json": "bun run scripts/network-cli.js discover --json",
    "network-validate": "bun run scripts/network-cli.js validate",
    "network-test": "bun run scripts/network-cli.js test",
    "network-revert": "bun run scripts/network-cli.js revert"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "nanoid": "^5.1.5",
    "zod": "^3.25.74",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "typescript": "^5.8.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.0.10",
    "prettier": "^3.6.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.38"
}