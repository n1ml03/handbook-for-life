{
  "name": "handbook-api",
  "version": "1.0.0",
  "description": "Handbook Backend API Server",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "bun dist/server.js",
    "dev": "bun --watch src/server.ts",
    "build": "bun run build:clean && bun run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "bun build src/server.ts --outdir dist --target bun --minify --sourcemap",
    "build:tsc": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "bun run src/database/migrations/run-migrations.ts",
    "db:seed": "bun run src/database/seeds/run-seeds.ts",
    "db:reset": "bun run db:migrate && bun run db:seed",
    "db:csv:import": "bun run src/database/csv-import.ts",
    "db:csv:validate": "bun run src/database/csv-import.ts --validate-only",
    "db:csv:help": "bun run src/database/csv-import.ts --help",
    "db:status": "bun run src/database/migrations/run-migrations.ts --status && bun run src/database/seeds/run-seeds.ts --status",
    "db:setup": "echo 'Setting up database...' && bun run db:migrate && bun run db:seed && echo 'Database setup complete!'",
    "health": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3"
  }
}
