{
  "name": "handbook-api",
  "version": "1.0.0",
  "description": "Handbook Backend API Server",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "dev:debug": "bun --inspect --watch src/server.ts",
    "dev:verbose": "LOG_LEVEL=debug bun --watch src/server.ts",
    "dev:production": "NODE_ENV=production bun --watch src/server.ts",
    "setup": "bun run db:setup",
    "reset": "bun run db:reset",
    "health-check": "bun run health",
    "build": "bun build src/server.ts --outdir dist --target bun --minify --sourcemap",
    "local-setup": "bun scripts/local-db-setup.ts",
    "local-setup:seed": "bun scripts/local-db-setup.ts --seed",
    "local-setup:reset": "bun scripts/local-db-setup.ts --reset --seed",
    "network-discovery": "bun scripts/network-discovery.ts",
    "network-setup": "bun scripts/network-discovery.ts --update-env --instructions",
    "local-setup:verify": "bun scripts/local-db-setup.ts --verify-only",
    "db:setup": "bun run src/database/database-setup.ts",
    "db:migrate": "bun run src/database/migrations/run-migrations.ts",
    "db:reset": "bun run src/database/reset-database.ts",
    "db:create": "bun run src/database/database-setup.ts",
    "health": "curl -f http://localhost:3001/api/health || exit 1",
    "docs:generate": "node scripts/add-swagger-docs.js",
    "docs:open": "open http://localhost:3001/api-docs || echo 'Open http://localhost:3001/api-docs in your browser'",
    "docs:spec": "curl -s http://localhost:3001/api-docs.json | jq . > swagger-spec.json && echo 'OpenAPI spec saved to swagger-spec.json'"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsdom": "^26.1.0",
    "mysql2": "^3.14.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsdom": "^21.1.7"
  }
}
