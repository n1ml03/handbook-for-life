# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
APP_NAME=DOAXVV Handbook API
APP_VERSION=1.0.0
PORT=3001
HOST=0.0.0.0

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:5173
FRONTEND_BUILD_PATH=../frontend/dist
FRONTEND_STATIC_PATH=/static

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=doaxvv_handbook
DB_USER=doaxvv_user
DB_PASSWORD=doaxvv_password
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=15000
DB_TIMEOUT=30000
DB_TIMEZONE=+00:00
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Connection Management
DB_MAX_CONNECTION_ATTEMPTS=5
DB_CONNECTION_RETRY_DELAY=5000
DB_MONITORING_INTERVAL=60000
DB_SLOW_QUERY_THRESHOLD=1000

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
ENABLE_HTTPS=false
TRUST_PROXY=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_DIR=./logs
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_FORMAT=text
LOG_ENABLE_COLORS=true
LOG_DATE_PATTERN=YYYY-MM-DD

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false
RATE_LIMIT_SKIP_FAILED=false

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization
CORS_CREDENTIALS=true

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif,text/csv,application/json,application/pdf
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_ENDPOINTS=/health,/api/health
HEALTH_CHECK_TIMEOUT=5000
MONITORING_ENABLED=true
METRICS_PATH=/metrics
HEALTH_PATH=/health

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=600

# ============================================================================
# PAGINATION CONFIGURATION
# ============================================================================
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100
PAGINATION_DEFAULT_OFFSET=0

# ============================================================================
# SEARCH CONFIGURATION
# ============================================================================
SEARCH_DEFAULT_LANGUAGE=en
SEARCH_SUPPORTED_LANGUAGES=en,jp,cn,tw,kr
SEARCH_FUZZY_THRESHOLD=0.8

# ============================================================================
# PROCESS MANAGEMENT (PM2)
# ============================================================================
PM2_INSTANCES=max
PM2_MAX_MEMORY_RESTART=1000M

# ============================================================================
# OPTIONAL CONFIGURATIONS
# ============================================================================

# Redis Configuration (if using Redis cache)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0

# Email Configuration (if needed for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# FROM_EMAIL=noreply@example.com

# External API Keys (if needed)
# STEAM_API_KEY=
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=

