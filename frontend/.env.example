# ============================================================================
# DOAXVV HANDBOOK FRONTEND CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your environment variables

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Backend API base URL (matches backend PORT)
VITE_API_URL=http://localhost:3001/api

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application metadata
VITE_APP_TITLE=DOAXVV Handbook
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive handbook for Dead or Alive Xtreme Venus Vacation

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Development mode flag
VITE_DEV_MODE=true

# Build mode (development/production)
VITE_BUILD_MODE=development

# Debug mode for additional logging
VITE_DEBUG_MODE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable admin features
VITE_ENABLE_ADMIN=true

# Enable file upload features
VITE_ENABLE_UPLOAD=true

# Enable analytics (disabled in development)
VITE_ENABLE_ANALYTICS=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# ============================================================================
# UI CONFIGURATION
# ============================================================================
# Default theme (light/dark/system)
VITE_DEFAULT_THEME=system

# Pagination settings
VITE_ITEMS_PER_PAGE=20
VITE_DEFAULT_PAGE_SIZE=20

# Animation settings
VITE_ANIMATION_DURATION=300
VITE_ENABLE_ANIMATIONS=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# Cache settings
VITE_CACHE_TTL=300000
VITE_ENABLE_CACHE=true

# Request retry settings
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY=1000

# ============================================================================
# LOCALIZATION
# ============================================================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Available languages
VITE_SUPPORTED_LANGUAGES=en,jp,cn,tw,kr

# ============================================================================
# UPLOAD CONFIGURATION
# ============================================================================
# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=5242880

# Allowed file types
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,csv,json

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# CDN URL (if using one)
# VITE_CDN_URL=https://cdn.example.com

# Image optimization service
# VITE_IMAGE_SERVICE_URL=https://images.example.com 